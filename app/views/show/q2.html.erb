<div class="container">
  <div class="signup-message">Quiz</div>
  <div class="show_wrapper">
    <div class="show_content">
      <div class="qNumber2">Question 2</div>
      <div class="question"><%=@post.question %></div>
      <%= form_with(model: @answers, local: true, url: show_create2_path) do |form| %>
        <label>
          <div class="choice">
            <%= form.radio_button :flag, "1" %> <%=@post.answer1 %>
          </div>
        </label>

        <label>
          <div class="choice">
            <%= form.radio_button :flag, "2" %> <%=@post.answer2 %>
          </div>
        </label>

        <label>
          <div class="choice">
            <%= form.radio_button :flag, "3" %> <%=@post.answer3 %>
          </div>
        </label>

        <label>
          <div class="choice">
            <%= form.radio_button :flag, "4" %> <%=@post.answer4 %>
          </div>
        </label>

        <%= form.submit value="NEXT QUESTION", :class => "decide-btn"%>
      <%end %>

    </div>
  </div>
</div>