<% if @error_message %>
  <div class="form-error">
    <%= @error_message %>
  </div>
<% end %>


<%= form_with(model: @posts, local: true, url: post_create1_path) do |form| %>




  質問
  <%= form.text_area :question%>

  答え
  <label>
    <%= form.radio_button :flag, 1 %>
