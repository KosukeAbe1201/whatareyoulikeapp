<div class="container">
  <% if @error_message %>
    <div class="form-error">
      <%= @error_message %>
    </div>
  <% end %>
  <div class="post_wrapper">
    <div class="post_content">
      <%= form_with(model: @posts, local: true, url: post_create2_path) do |form| %>
        <div class="qNumber2">
          Question 2
        </div>
        
        <div class="question">
          <%= form.text_area :question, :class => "textarea",:size => "55x5", value: "わたしの一番好きな食べ物は？" %>
        </div>

        <div class="ans">
          <span id="num">1</span> <%= form.radio_button :flag, 1 , :class => "radio-btn",:id =>"btn1"%>
          <label for = "btn1" class="label"></label>
          <%= form.text_area :answer1, :class => "textarea", :size => "40x3", value: "焼肉"%>
        </div>

        <div class="ans">
          <label>
            <span id="num">2</span>  <%= form.radio_button :flag, 2 , :class => "radio-btn",:id =>"btn2"%>
            <label for = "btn2" class="label"></label>
            <%= form.text_area :answer2, :class => "textarea",:size => "40x3",value: "寿司" %>
          </label>
        </div>

        <div class="ans">
          <label>
            <span id="num">3</span> <%= form.radio_button :flag, 3 , :class => "radio-btn",:id =>"btn3"%>
            <label for = "btn3" class="label"></label>
            <%= form.text_area :answer3, :class => "textarea",:size => "40x3",value: "カレー" %>
          </label>
        </div>

        <div class="ans">
          <label>
            <span id="num">4</span> <%= form.radio_button :flag, 4 , :class => "radio-btn",:id =>"btn4"%>
            <label for = "btn4" class="label"></label>
            <%= form.text_area :answer4, :class => "textarea",:size => "40x3",value: "ラーメン" %>
          </label>
        </div>

        <%= form.submit value="NEXT QUESTION", :class => "decide-btn"%>
      <% end %>
    </div>
  </div>
</div>
