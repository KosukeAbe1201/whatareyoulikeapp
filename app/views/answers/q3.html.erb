<div class="container">
  <div class="signup-message">
    Quiz
  </div>
  <div class="show_wrapper">
    <div class="show_content">
      <div class="qNumber3">
           Question 3
      </div>
      <div class="question">
        <%= @post.question %>
      </div>
      <%= form_with(model: Answer.new, local: true, url: update_path, remote: true) do |form| %>
        <label>
          <div class="choice">
            <%= form.radio_button :flag, "1" %> <%= @post.answer1 %>
          </div>
        </label>
        <label>
          <div class="choice">
            <%= form.radio_button :flag, "2" %> <%= @post.answer2 %>
          </div>
        </label>
        <label>
          <div class="choice">
            <%= form.radio_button :flag, "3" %> <%= @post.answer3 %>
          </div>
        </label>
        <label>
          <div class="choice">
            <%= form.radio_button :flag, "4" %> <%= @post.answer4 %>
          </div>
        </label>
        <%= form.hidden_field :question_num, :value => "3" %>
        <%= form.hidden_field :user_id, :value => session[:answerer_id] %>
        <%= form.submit value="NEXT QUESTION", :class => "decide-btn"%>
      <% end %>
    </div>
  </div>
</div>
